{
    "name": "shell-format",
    "displayName": "Shell Format",
    "description": "Intelligent Shell script formatting and error checking fixing with shfmt and shellcheck",
    "version": "1.0.0",
    "publisher": "bdq460",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/bdq460/shell-format.git"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Formatters",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:shellscript",
        "onCommand:shell-format.fixAllProblems"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "shellscript",
                "aliases": [
                    "Shell",
                    "Shell Script"
                ],
                "extensions": [
                    ".sh",
                    ".bash",
                    ".zsh"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Shell Format",
            "properties": {
                "shell-format.shellcheckPath": {
                    "type": "string",
                    "default": "shellcheck",
                    "description": "Path to shellcheck executable"
                },
                "shell-format.shfmtPath": {
                    "type": "string",
                    "default": "shfmt",
                    "description": "Path to shfmt executable"
                },
                "shell-format.tabSize": {
                    "type": [
                        "number",
                        "string"
                    ],
                    "enum": [
                        "vscode",
                        "ignore"
                    ],
                    "default": "vscode",
                    "description": "Indentation size: number for spaces or 'tab' for tabs (used with shfmt -i/-tabs), value can be one of [vscode, ignore] or number. vscode:use vscode tab size, ignore: ignore tab check and format.default is vscode"
                },
                "shell-format.log": {
                    "type": "object",
                    "default": {
                        "enabled": false,
                        "level": "info",
                        "format": "timestamp"
                    },
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": false,
                            "description": "Enable or disable logging"
                        },
                        "level": {
                            "type": "string",
                            "enum": [
                                "debug",
                                "info",
                                "warn",
                                "error"
                            ],
                            "default": "info",
                            "description": "Log level: debug, info, warn, error"
                        },
                        "format": {
                            "type": "string",
                            "default": "[%timestamp] [%level] [%name] [%method:%line] %message",
                            "description": "Log format pattern. Available placeholders: %timestamp, %level, %name, %method, %line, %message. Example: '[%timestamp] [%level] [%name] [%method:%line] %message'"
                        }
                    },
                    "description": "Log configuration: control whether logging is enabled, log level, and log format"
                },
                "shell-format.onError": {
                    "type": "string",
                    "enum": [
                        "showProblem",
                        "ignore"
                    ],
                    "default": "showProblem",
                    "description": "How to handle shfmt errors"
                }
            }
        },
        "commands": [
            {
                "command": "shell-format.formatDocument",
                "title": "Format document with shell-format"
            },
            {
                "command": "shell-format.fixAllProblems",
                "title": "Fix all problems with shell-format"
            }
        ],
        "codeActions": [
            {
                "kind": "quickfix.shell-format",
                "title": "Fix this issue with shell-format",
                "languages": [
                    "shellscript"
                ]
            },
            {
                "kind": "source.fixAll.shell-format",
                "title": "Fix all problems with shell-format",
                "languages": [
                    "shellscript"
                ]
            }
        ]
    },
    "scripts": {
        "package": "npm run package-readme && npx @vscode/vsce package && npm run restore-readme && npm run clean",
        "install:extension": "npm run package && code --install-extension $(ls shell-format-*.vsix) --extensions-dir ~/.vscode/extensions",
        "vscode:prepublish": "npm run compile",
        "clean": "rm -rf dist/*",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "lint": "eslint src --ext ts",
        "test": "node test/run.js",
        "package-readme": "mv README.md README.md.bak && cp doc/user/README.md README.md",
        "restore-readme": "mv -f README.md.bak README.md"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "@typescript-eslint/parser": "^8.53.0",
        "eslint": "^9.39.2",
        "typescript": "^5.0.0"
    }
}
